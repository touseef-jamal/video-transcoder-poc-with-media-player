{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "baseUrl": "./src",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "uploads"]
}
